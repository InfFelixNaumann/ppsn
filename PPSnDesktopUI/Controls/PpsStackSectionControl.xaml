<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:pps="clr-namespace:TecWare.PPSn.Controls">

	<Style TargetType="{x:Type pps:PpsStackSectionControl}" BasedOn="{StaticResource {x:Type ItemsControl}}">
		<Setter Property="ItemTemplate">
			<Setter.Value>
				<DataTemplate>
					<pps:PpsStackSectionItem
						HeaderTemplate="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type pps:PpsStackSectionControl}}, Path=(pps:PpsStackSectionControl.HeaderTemplate)}"
						>
						<ContentPresenter Content="{Binding}">
							<ContentPresenter.Style>
								<Style TargetType="ContentPresenter">
									<Style.Triggers>
										<DataTrigger Binding="{Binding Path=(pps:PpsStackSectionControl.IsOpen), RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type pps:PpsStackSection}}}"  Value="False">
											<Setter Property="Visibility" Value="Collapsed"/>
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</ContentPresenter.Style>
						</ContentPresenter>
					</pps:PpsStackSectionItem>
				</DataTemplate>
			</Setter.Value>
		</Setter>
