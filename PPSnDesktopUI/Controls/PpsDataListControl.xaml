<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:ui="clr-namespace:TecWare.PPSn.Controls"
					xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<Style TargetType="{x:Type ui:PpsDataListControl}">
		<Setter Property="Focusable" Value="False" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ui:PpsDataListControl}">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
							<RowDefinition />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition x:Name="filterColumn" MinWidth="72" MaxWidth="276"/>
						</Grid.ColumnDefinitions>

						<ui:PpsCommandBarControl BasicCommands="{TemplateBinding ListCommands}" ExternalCommands="{TemplateBinding SelectedItemCommands}" Mode="TransparentRectangle" HorizontalAlignment="Left" />

						<ui:PpsTextBox x:Name="filterBox"
									   Grid.Column="1"
									   Height="23"
									   Text="{Binding UserFilterText,RelativeSource={RelativeSource TemplatedParent},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Delay=300}"
									   VerticalAlignment="Center"
									   AdditionalImage="magnify" />

						<Rectangle Grid.Row="1" Grid.ColumnSpan="2" StrokeThickness="0" Fill="{DynamicResource PPSnSeparatorBrush}" Height="1" Margin="0,0,0,6" />

						<ItemsPresenter Grid.Row="2" Grid.ColumnSpan="2" />
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsFilterable" Value="False">
							<Setter TargetName="filterBox" Property="Visibility" Value="Collapsed" />
							<Setter TargetName="filterColumn" Property="MinWidth" Value="0" />
							<Setter TargetName="filterColumn" Property="Width" Value="Auto" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type ui:PpsDataListItem}">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Foreground" Value="{DynamicResource PPSnWindowForegroundBrush}" />
		<Setter Property="FocusVisualStyle" Value="{x:Null}" />
		<Setter Property="SnapsToDevicePixels" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ui:PpsDataListItem}">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition Height="2" />
							<RowDefinition />
						</Grid.RowDefinitions>
						<Grid.ContextMenu>
							<ContextMenu ItemsSource="{TemplateBinding Commands}" >
								<ContextMenu.ItemTemplate>
									<DataTemplate>
										<TextBlock Text="{Binding DisplayText}" />
									</DataTemplate>
								</ContextMenu.ItemTemplate>
							</ContextMenu>
						</Grid.ContextMenu>
						<Border Background="{TemplateBinding Background}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
							<ContentPresenter Margin="6,1"/>
						</Border>
						<Rectangle x:Name="focusRect" Stroke="{DynamicResource PPSnMarkerBrush}" StrokeThickness="1" RenderOptions.EdgeMode="Aliased" Opacity="0" />
						<!--ItemSeparator-->
						<Rectangle Grid.Row="1" Margin="6,0" StrokeThickness="0" Fill="{DynamicResource PPSnWindowBackgroundBrush}" />
						<ui:PpsCommandBarControl Grid.Row="2" BasicCommands="{TemplateBinding Commands}" />
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsFocused" Value="True">
							<Setter TargetName="focusRect" Property="Opacity" Value="1" />
						</Trigger>
						<Trigger Property="IsSelected" Value="True">
							<Setter Property="Background" Value="{DynamicResource PPSnSelectionBarBrush}" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>