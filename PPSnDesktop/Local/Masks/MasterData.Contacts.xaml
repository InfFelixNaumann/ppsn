<ui:PpsGenericWpfControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						xmlns:sys="clr-namespace:System;assembly=mscorlib"
						xmlns:ui="clr-namespace:TecWare.PPSn.UI;assembly=PPSn.Desktop.UI"
             mc:Ignorable="d"  Title="Test Maske"
						 d:DesignHeight="600" d:DesignWidth="800">
	<x:Code>
		<![CDATA[
		require 'MasterData.Contracts.lua';
		]]>
	</x:Code>
  <ui:PpsGenericWpfControl.Resources>
		<ResourceDictionary>
		</ResourceDictionary>
	</ui:PpsGenericWpfControl.Resources>
	<Grid Width="400">
		<Grid.RowDefinitions>
			<RowDefinition Height="28" />
			<RowDefinition Height="28" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
        
		<Label Grid.Column="0" Content="{Binding Data.KONT.KONTNAME.Caption, Mode=OneTime}"  />
		<TextBox Grid.Column="1" Height="23" Text="{Binding Data.KONT/KONTNAME}" />
        
		<Label Grid.Column="0" Grid.Row="1" Content="{Binding Data.KONT.KONTVORNAME.Caption, Mode=OneTime}"  />
		<TextBox Grid.Column="1" Grid.Row="1" Height="23" Text="{Binding Data.KONT/KONTVORNAME}" />

		<StackPanel Grid.Column="0" Grid.Row="2">
			<Button Content="Test" Margin="0,0,0,12" Command="{Binding Add}" />
			<Button Content="Show Stack" Margin="0,0,0,12" Command="{Binding ShowStackCommand}" />
			<Button Content="Undo" Margin="0,0,0,12" Command="{Binding UndoCommand}" />
			<Button Content="Redo" Margin="0,0,0,12" Command="{Binding RedoCommand}" />
		</StackPanel>
		<ListBox Grid.Column="1" Grid.Row="2" ItemsSource="{Binding Path=Data.ADDR}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ADDRTEXT}" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>

    <ui:PpsGenericWpfControl.Commands>
        <ui:PpsUICommandButton Order="100,100" DisplayText="Speichern" Description="Testchen" Image="disks.png" Command="{Binding HalloCommand}" />
        <x:Null />
        <ui:PpsUICommandButton DisplayText="Komando2" Description="Kommando2" Image="disks.png"/>
    </ui:PpsGenericWpfControl.Commands>

</ui:PpsGenericWpfControl>
